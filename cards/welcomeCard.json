{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://raw.githubusercontent.com/s222196837/FlowerBot/main/images/flower-bot.png",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Welcome to the interactive FlowerBot!",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "true",
      "text": "I can help you with plant identification and purchases from my nursery.  Upload a photo or let me know what type of flowers you like.  I can also make some suggestions for you based on similar purchases made in the past.",
      "wrap": true,
      "maxLines": 0
    }
  ]
}
